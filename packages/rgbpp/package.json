{
  "name": "rgbpp",
  "version": "0.5.0",
  "scripts": {
    "build": "tsup",
    "lint": "tsc && eslint --ext .ts src/* && prettier --check 'src/*.ts'",
    "lint:fix": "tsc && eslint --fix --ext .ts src/* && prettier --write 'src/*.ts'"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./btc": {
      "import": {
        "types": "./dist/btc.d.ts",
        "default": "./dist/btc.js"
      },
      "require": {
        "types": "./dist/btc.d.cts",
        "default": "./dist/btc.cjs"
      }
    },
    "./ckb": {
      "import": {
        "types": "./dist/ckb.d.ts",
        "default": "./dist/ckb.js"
      },
      "require": {
        "types": "./dist/ckb.d.cts",
        "default": "./dist/ckb.cjs"
      }
    },
    "./service": {
      "import": {
        "types": "./dist/service.d.ts",
        "default": "./dist/service.js"
      },
      "require": {
        "types": "./dist/service.d.cts",
        "default": "./dist/service.cjs"
      }
    },
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@rgbpp-sdk/btc": "workspace:*",
    "@rgbpp-sdk/ckb": "workspace:*",
    "@rgbpp-sdk/service": "workspace:*",
    "@nervosnetwork/ckb-sdk-utils": "0.109.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
